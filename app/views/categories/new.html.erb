<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>

<div class="form-group row">
  <%= f.label :name, class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class:"form-control", placeholder:"Enter category name", autofocus: true %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-5">
    <%= f.submit class: "btn btn-primary btn-lg"%>
  </div>
</div>
<div class="row justify-content-center">
  <%= link_to "[Cancel request and return to articles listing]", articles_path, class:"text-center"%>
</div>

<% end %>
