<h1 align="center">Listing all categories</h1>
<div class="for_pagination">
  <%= will_paginate %>
</div>
<% @categories.each do |category| %>
  <ul class="listing">
    <div class="row justify-content-center">
      <div class="well col-md-4 d-flex flex-column align-items-center justify-content-center">
        <li class="article-title">
          <%= link_to "#{category.name}", category_path(category) %>
        </li>
        <li>
          <small><%= pluralize(category.articles.count, "article") %></small>
        </li>
      </div>
    </div>
    </ul>
<% end %>
<div class="for_pagination">
  <%= will_paginate %>
</div>
